<h1>施設情報を編集する</h1>

<%= form_with model: @room, local: true do |f| %>
  <div>
    <%= f.label :name, "施設名" %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description, "施設詳細" %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :price, "宿泊料金" %>
    <%= f.number_field :price %>
  </div>

  <div>
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %>
  </div>

  <div>
    <%= f.submit "更新する" %>
  </div>
<% end %>
