<p class="text-center mt-3">
  <strong>検索結果: <%= @total_count %> 件</strong>
</p>

<!-- 施設一覧 -->
<% if @rooms.any? %>
  <div class="row">
    <% @rooms.each do |room| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <% if room.image.attached? %>
            <%= image_tag room.image, class: "card-img-top" %>
          <% else %>
            <%= image_tag "default-room.png", class: "card-img-top" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to room.name, room_path(room) %></h5>
            <p class="card-text"><%= room.description.truncate(100) %></p>
            <p class="card-text"><strong>宿泊料金: ¥<%= room.price %>/日</strong></p>
            <p class="card-text"><small class="text-muted">住所: <%= room.address %></small></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center mt-4">
    <p class="text-muted">該当する施設が見つかりませんでした。</p>
    <%= link_to "施設一覧に戻る", rooms_path, class: "btn btn-outline-secondary mt-2" %>
  </div>
<% end %>

<!-- ホームに戻る -->
<div class="text-center mt-4">
  <%= link_to "ホームに戻る", root_path, class: "btn btn-primary" %>
</div>